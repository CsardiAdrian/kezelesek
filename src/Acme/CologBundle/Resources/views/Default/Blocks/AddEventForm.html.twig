{{ form_start(addEventForm) }}

    {{ form_errors(addEventForm) }}

<div class="form-group">
    <div class="input-group">
        <span class="input-group-addon">Kozmetikus</span>
        {{ form_errors(addEventForm.cosmetician) }}
        {{ form_widget(addEventForm.cosmetician) }}
    </div>
</div>

<div class="form-group">
    <div class="input-group">
        <span class="input-group-addon">Időpont</span>
        {{ form_errors(addEventForm.startDatetime) }}
        {{ form_widget(addEventForm.startDatetime) }}
    </div>
</div>
<div class="form-group">
<div class="row-fluid">

        <select id="treatment" name="treatment">
            <option value="0">Válasszon kezelést...</option>
            {% for treatments in treatment %}
                <option value="{{ treatments.id }}">{{ treatments.id }}. {{ treatments.name }}</option>
            {% endfor %}
        </select>
    {% if is_granted("ROLE_SUPER_ADMIN") %}
        <select id="user" name="user">
            <option value="0">Válasszon vendéget...</option>
            {% for users in users %}
                <option value="{{ users.id }}">{{ users.id }}. {{ users.username }}</option>
            {% endfor %}
        </select>
    {% else %}
        {#<select id="user" name="user">#}
            {#<option value="{{ user.id }}">{{ user.id }}. {{ user.username }}</option>#}
        {#</select>#}
        <input  id="user" name="user" type="hidden" value="{{ user.id }}">
    {% endif %}

</div>
</div>

<div class="btn-group">
    <a class="btn btn-default" href="{{ path('_events') }}">Vissza</a>
    {{ form_widget(addEventForm.Ment) }}
</div>

{{ form_row(addEventForm._token) }}

{{ form_end(addEventForm) }}